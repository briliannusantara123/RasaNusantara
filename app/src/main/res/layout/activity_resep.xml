<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar + Search Bar + Kategori -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_background"
        android:elevation="1dp"
        android:padding="16dp">

        <!-- Greeting -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/space_between">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hai Chef"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSubGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mau masak apa hari ini?"
                    android:textSize="16sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:src="@drawable/logo" />
        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:elevation="8dp"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:elevation="10dp"
                android:gravity="center_vertical">

                <!-- Repeatable Category Items (Sarapan, Cemilan, dst.) -->
                <!-- Sarapan -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingEnd="30dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgSunda"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/nasi_timbel"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunda"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingEnd="30dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgPadang"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/rendang"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Padang"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingEnd="30dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgJawa"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/gudeg"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jawa"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingEnd="30dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgBetawi"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/sotobetawi"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Betawi"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingEnd="30dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgBali"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ayam_betutu"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/RoundedImage" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bali"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Tambahkan kategori lainnya di sini -->
                <!-- Cemilan, Kue, Minuman dst. -->

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- Bagian Scrollable -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="210dp"
        android:layout_marginBottom="100dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Section: Makanan Paling Banyak Dipesan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resep Unggulan"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Food Card 1 -->
                <LinearLayout
                    android:id="@+id/nasitimbeltop"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/nasi_timbel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nasi Timbel"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Food Card 2 -->
                <LinearLayout
                    android:id="@+id/rendangtop"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rendang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rendang Sapi"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/gudegtop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Food Card 1 -->

                <!-- Food Card 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/food_card_background"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gudeg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Gudeg"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/sotobetawitop"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sotobetawi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soto Betawi"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Section: Minuman Paling Banyak Dipesan -->
            <TextView
                android:id="@+id/sectionSunda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunda"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />
            <LinearLayout
                android:id="@+id/nasitimbel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Food Card 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/nasi_timbel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nasi Timbel"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Food Card 2 -->
                <LinearLayout
                    android:id="@+id/sayurasem"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sayur_asem" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sayur Asem"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/sectionPadang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Padang"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Food Card 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rendang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rendang Sapi"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Food Card 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gulai_tunjang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gulai Tunjang"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/sectionJawa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawa"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Food Card 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gudeg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gudeg Jawa"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Food Card 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/rawon_surabaya" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rawon Surabaya"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/sectionBetawi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Betawi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Food Card 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sotobetawi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soto Betawi"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Food Card 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/gabus_pucung" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gabus Pucung"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/sectionBali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bali"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <!-- Food Card 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ayam_betutu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ayam Betutu"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Food Card 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/food_card_background"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sate_lilit" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sate Lilit"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemHorizontalTranslationEnabled="false"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when item is checked/selected -->
    <item
        android:color="@color/nav_active"
        android:state_checked="true" />

    <!-- Default (unchecked) -->
    <item
        android:color="@color/nav_inactive" />

</selector>
